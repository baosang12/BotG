{
  "Description": "cTrader-specific configuration cho telemetry PatternLayer",
  "Version": "1.0.0",
  "LastUpdated": "2025-12-03",
  "FeatureFlags": {
    "UsePatternLayer": true,
    "UseStructureLayer": true,
    "UseMALayer": true,
    "UseMomentumLayer": true,
    "EnableTelemetry": true,
    "EnableDetailedLogging": true,
    "EnablePerformanceMonitoring": true
  },
  "PatternTelemetry": {
    "EnablePatternLogging": true,
    "LogPatternScores": true,
    "LogPatternFlags": true,
    "LogProcessingTime": true,
    "SampleRate": 1,
    "LogDirectory": "d:\\botg\\logs\\patternlayer\\",
    "EnableConsoleOutput": true,
    "MinScoreThreshold": 0.0,
    "MaxScoreThreshold": 100.0,
    "EnableDebugMode": true,
    "DebugSampleRate": 5,
    "DebugMinScoreThreshold": 50.0,
    "DebugIncludeDetectorDetails": true,
    "DebugIncludeRawMetrics": false
  },
  "LayerWeights": {
    "Structure": 0.25,
    "MovingAverages": 0.25,
    "Momentum": 0.20,
    "Patterns": 0.30
