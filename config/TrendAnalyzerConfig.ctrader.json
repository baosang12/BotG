    }
  },
  "Performance": {
    "AnalysisTimeWarningMs": 10.0,
    "MemoryWarningBytes": 10485760,
    "EnableRealTimeMetrics": true
  },
  "Logging": {
    "Level": "Information",
    "FileRotation": {
      "MaxFileSizeMB": 10,
      "MaxFiles": 5,
      "CompressOldFiles": true
    },
    "ConsoleColors": {
      "LiquidityGrab": "Yellow",
      "CleanBreakout": "Green",
      "FailedBreakout": "Red"
    }
  }
